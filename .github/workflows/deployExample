name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main 

jobs:
  deploy:
    runs-on: ubuntu-latest
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      - name: Setup Node.js
        uses: actions/setup-node@v4
        with:
          node-version: '18' # Or your preferred Node.js version

      - name: Setup pnpm
        uses: pnpm/action-setup@v2
        with:
          version: '8' # Or your preferred pnpm version
          run_install: false # We'll install dependencies in the next step

      - name: Install dependencies
        run: pnpm install

      - name: Run dev:bare (and potentially build)
        run: pnpm run dev:bare & # Run in the background

      - name: Wait for dev server (crude check)
        run: sleep 10 # Adjust the sleep time as needed

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v3
        with:
          path: './examples/bare-js' #  Path to the directory containing the final index.html

      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v3
